<div class="row justify-content-md-center mt-2">
    
    <div class="col col-md-4">
        {{#each collector}}
        <h2>{{{username}}}</h2>
        <h2>collector id: {{{collector_id}}}</h2>
        <span><i class="fa fa-paper-plane"></i> <a href="mailto:{{{email}}}?subject=Collector's%20Trading%20Platform%20">{{{email}}}</a> â€¢ <i class="fa fa-phone"></i> <a href="tel:{{{phone_number}}}">{{{phone_number}}}</a></span>
        <hr/>
        {{/each}}
    </div>

    {{#if isLoggedInUser}}
    {{else}}
    <div class="col col-md-4">
        <h4>View Trade Matches:</h4>
        <a href="/collector/trade/{{{collector_id}}}">text list format</a>
        <br>
        <a href="/collector/trade/images/{{{collector_id}}}">image list format</a>
    </div>
    {{/if}}

    <div class="col col-md-4 heading"><h3>{{#each collector}}{{{username}}}{{/each}}'s Have List</h3></div>
        {{#if showHasPublic}}
        <div class="col col-md-4">
            {{#each collectionHas}}
            <div class="parent">             
                <div class='child float-left-child'>
                    <td>
                        <a href="/collectible/{{{collectible_id}}}">{{{name}}}</a>
                        <br>
                        <br>
                        <img src=/collectible/image/{{{collectible_id}}}/>
                    </td>
                </div> 
            </div>
            {{/each}}
        </div>
        {{#if showHas}}
        {{else}}
            <p>This collector has nothing in their have list</p>
        {{/if}}
        {{else}}
            <p>This collector's have list is private</p>
        {{/if}}


    <div class="col col-md-4 heading"><h3>{{#each collector}}{{{username}}}{{/each}}'s Want List</h3></div>
        {{#if showWantsPublic}}
        <div class="col col-md-4">
            {{#each collectionWants}}
            <div class="parent">             
                <div class='child float-left-child'>
                    <td>
                        <a href="/collectible/{{{collectible_id}}}">{{{name}}}</a>
                        <br>
                        <br>
                        <img src=/collectible/image/{{{collectible_id}}}/>
                    </td>
                </div> 
            </div>
            {{/each}}
        </div>
        {{#if showWants}}
        {{else}}
            <p>This collector has nothing in their want list</p>
        {{/if}}  
        {{else}}
            <p>This collector's want list is private</p>
        {{/if}}

    <div class="col col-md-4 heading"><h3>{{#each collector}}{{{username}}}{{/each}}'s For Trade List</h3></div>
        <div class="col col-md-4">
            {{#each collectionWillingToTrade}}
            <div class="parent">             
                <div class='child float-left-child'>
                    <td>
                        <a href="/collectible/{{{collectible_id}}}">{{{name}}}</a>
                        <br>
                        <br>
                        <img src=/collectible/image/{{{collectible_id}}}/>  
                    </td>
                </div> 
            </div>
            {{/each}}
        </div>
            {{#if showTrade}}
            {{else}}
                <p>This collector has nothing in their trade list</p>
            {{/if}}
    </form>   

</div>

<link rel="stylesheet" href="/css/collectorpage.css"/>
