<div class="row justify-content-md-center mt-2">
    
    <div class="col col-md-4">
        {{#each collector}}
        <h2>{{{username}}}</h2>
        <h5>collector id: {{{collector_id}}}</h5>
        {{/each}}
        {{#if isAuthenticated}}
        {{#each collector}}
        <span><i class="fa fa-paper-plane"></i> <a href="mailto:{{{email}}}?subject=Collector's%20Trading%20Platform%20">{{{email}}}</a></span>
        <br>
        {{/each}}
        {{/if}}
        <br>
        <span>Rating:</span>
        {{#if noRating}}
        <span>no ratings received</span>
        {{/if}} 
        {{#if zeroStar}}
        <span class="fa fa-star-o"></span>
        <span class="fa fa-star-o"></span>
        <span class="fa fa-star-o"></span>  
        <span class="fa fa-star-o"></span>   
        <span class="fa fa-star-o"></span>  
        {{/if}}        
        {{#if halfStar}}
        <span class="fa fa-star-half-o"></span>
        <span class="fa fa-star-o"></span>
        <span class="fa fa-star-o"></span>
        <span class="fa fa-star-o"></span>  
        <span class="fa fa-star-o"></span>        
        {{/if}}
        {{#if oneStar}}
        <span class="fa fa-star"></span>
        <span class="fa fa-star-o"></span>
        <span class="fa fa-star-o"></span>
        <span class="fa fa-star-o"></span>  
        <span class="fa fa-star-o"></span>   
        {{/if}}
        {{#if oneHalfStar}}
        <span class="fa fa-star"></span>
        <span class="fa fa-star-half-o"></span>
        <span class="fa fa-star-o"></span>
        <span class="fa fa-star-o"></span>
        <span class="fa fa-star-o"></span>  
        {{/if}}        
        {{#if twoStar}}
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star-o"></span>
        <span class="fa fa-star-o"></span>
        <span class="fa fa-star-o"></span>        
        {{/if}}
        {{#if twoHalfStar}}
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star-half-o"></span>
        <span class="fa fa-star-o"></span>
        <span class="fa fa-star-o"></span>
        {{/if}}
        {{#if threeStar}}
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star-o"></span>
        <span class="fa fa-star-o"></span>
        {{/if}}        
        {{#if threeHalfStar}}
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star-half-o"></span>
        <span class="fa fa-star-o"></span>
        {{/if}}
        {{#if fourStar}}
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star-o"></span>        
        {{/if}}
        {{#if fourHalfStar}}
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star-half-o"></span>
        {{/if}}        
        {{#if fiveStar}}
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>        
        <span class="fa fa-star"></span>
        {{/if}}
        <br>
        {{#if isAuthenticated}}
        <span><a href="/collector/rating/{{{collector_id}}}">Give or view ratings</a></span>
        {{else}}
        <span><a href="/collector/rating/{{{collector_id}}}">view ratings</a></span>
        {{/if}}
        <hr/>
    </div>
    <div class="col col-md-4">
        {{#if isLoggedInUser}}
        {{else}}
            {{#if isAuthenticated}}
                <h3><a href="/collector/trade/images/{{{collector_id}}}">View trade matches</a></h3>
                <hr/>
            {{/if}}
        {{/if}}
        <p><a href="/collector/list/{{{collector_id}}}">view in text list format</a></p>
        <p><a href="#have">have</a> &nbsp;&nbsp; | &nbsp;&nbsp; <a href="#want">want</a> &nbsp;&nbsp; | &nbsp;&nbsp; <a href="#trade">for trade</a></p>
    </div>
    <div class="col col-md-4">
        <h6>Filter</h6>
        <form method="GET" action="/collector/{{{collector_id}}}" id="filter-form">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="legoFilter" name="filter" value="lego">
                <label class="form-check-label" for="legoFilter">Lego</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="funkoFilter" name="filter" value="funko">
                <label class="form-check-label" for="funkoFilter">Funko</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="pusheenFilter" name="filter" value="pusheen">
                <label class="form-check-label" for="pusheenFilter">Pusheen</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="pokemonFilter" name="filter" value="pokemon">
                <label class="form-check-label" for="pokemonFilter">Pokemon</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="hotwheelsFilter" name="filter" value="hot wheels">
                <label class="form-check-label" for="hotwheelsFilter">Hot Wheels</label>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
            <a class="btn btn-success" href="/collector/{{{collector_id}}}" role="button">Reset</a>
        </form>
    </div>
    <div id="have" class="col col-md-4 heading"><h3>{{#each collector}}{{{username}}}{{/each}}'s Have List</h3></div>
        {{#if showHasPublic}}
        <div class="col col-md-4">
            {{#each collectionHas}}
            <div class="parent">             
                <div class='child float-left-child'>
                    <td>
                        <a href="/collectible/{{{collectible_id}}}">{{{name}}}</a>
                        <p class="small">{{{typeName}}}</p>
                        <img src=/collectible/image/{{{collectible_id}}}/>
                    </td>
                </div> 
            </div>
            {{/each}}
        </div>
        {{#if showHas}}
        {{else}}
            <p>This collector has nothing in their have list</p>
        {{/if}}
        {{else}}
            <p>This collector's have list is private</p>
        {{/if}}


    <div id="want" class="col col-md-4 heading"><h3>{{#each collector}}{{{username}}}{{/each}}'s Want List</h3></div>
        {{#if showWantsPublic}}
        <div class="col col-md-4">
            {{#each collectionWants}}
            <div class="parent">             
                <div class='child float-left-child'>
                    <td>
                        <a href="/collectible/{{{collectible_id}}}">{{{name}}}</a>
                        <p class="small">{{{typeName}}}</p>
                        <img src=/collectible/image/{{{collectible_id}}}/>
                    </td>
                </div> 
            </div>
            {{/each}}
        </div>
        {{#if showWants}}
        {{else}}
            <p>This collector has nothing in their want list</p>
        {{/if}}  
        {{else}}
            <p>This collector's want list is private</p>
        {{/if}}

    <div id="trade" class="col col-md-4 heading"><h3>{{#each collector}}{{{username}}}{{/each}}'s For Trade List</h3></div>
        {{#if showTradesPublic}}        
        <div class="col col-md-4">
            {{#each collectionWillingToTrade}}
            <div class="parent">             
                <div class='child float-left-child'>
                    <td>
                        <a href="/collectible/{{{collectible_id}}}">{{{name}}}</a>
                        <p class="small">{{{typeName}}}</p>
                        <img src=/collectible/image/{{{collectible_id}}}/>  
                    </td>
                </div> 
            </div>
            {{/each}}
        </div>
            {{#if showTrade}}
            {{else}}
                <p>This collector has nothing in their trade list</p>
            {{/if}}
            {{else}}
            <p>This collector's trade list is private</p>
            {{/if}}

</div>

