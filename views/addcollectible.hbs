<div class="row justify-content-md-center mt-2">
    <div class="col col-md-4">
        <h2>Add a new collectible</h2>
        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}
        
        <h5>Type</h5>
        <form id="add_collectible" action="/add-collectible" enctype="multipart/form-data" method="POST">
            <div class="form-group">
                <select id='option_type' name="collectible_type" required>
                    <option value="lego">lego</option>
                    <option value="funko">funko</option>
                    <option value="hot_wheel">hot wheel</option>
                </select>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" required>
            </div>
            <div class="form-group lego box" style='display:none;' id='lego'>
                <label for="piece_count">Piece count: </label>
                <input type="jsonb" name="piece_count" id="piece_count">
                
                <label for="set_number">Set number: </label>
                <input type="jsonb" name="set_number" id="set_number">
                
                <label for="theme">Theme</label>
                <input type="jsonb" name="theme" id="theme"/>
                
                <label for="designed_by">Designed By</label>
                <input type="jsonb" name="designed_by" id="designed_by"/>
            </div>
            <div class="form-group funko box" style='display:none;' id='funko'>
                <label for="number">Number</label>
                <input type="jsonb" name="number" id="number"/>
                
                <label for="Line">Line: </label>
                <input type="jsonb" name="line" id="line"/>
            </div>
            <div class="form-group hot_wheel box" style='display:none;' id='hot_wheel'>
                <label for="number">Number</label>
                <input type="jsonb" name="number1" id="number1"/>
                
                <label for="series">Series</label>
                <input type="jsonb" name="series" id="series"/>
                
                <label for="year_released">Year released</label>
                <input type="jsonb" name="year_released1" id="year_released1"/>
            </div>
            <div class="form-group">
                <p>Select a jpeg image of the collectible</p>
                <input type="file" name="pic" id="image" accept="image/jpeg" required/>
            </div>
            <div>
                <input type="submit" value="Add" name="add">
            </div>
        </form>
        <script src="/js/addcollectible.js"></script>
        <link rel="stylesheet" href="/css/addcollectible.css"/>
    </div>
</div>