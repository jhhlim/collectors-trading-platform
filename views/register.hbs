{{{title}}}
<h1> Register for an account </h1>
<p>Choose your user account type. *Note, admin accounts require approval from webmaster before creation:</p>
<div ng-view>
<form id="register_collector" action="/auth/signup" method="POST">
    <div class="form-example">
        <label for="username">Username: </label>
        <input type="text" name="username" pattern=".{,20}" id="username" required>
    </div>
    <div class="form-example">
        <label for="password">Password: </label>
        <input type="password" id="password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
    </div>
    <div class="form-example">
        <label for="email"> Email: </label>
        <input type="email" name="email" id="email" required>
    </div>    
    <div class="form-example">
        <label for="phone_number"> Phone Number: </label>
        <input type="phone_number" name="phone_number" id="phone_number" required>
    </div>
    <div>
        <input type="submit" value="Submit" name="submit">
    </div>
</form>
<a href="/login">Already registered? Login here</a>
</div>
<script>
var app = angular.module("myApp", ["ngRoute"]);
app.config(function($routeProvider) {
  $routeProvider
  .when("/auth/signup", {
    templateUrl : "index"
  })
  //https://www.w3schools.com/angular/angular_routing.asp
  .otherwise({
    template : "<h1>None</h1><p>Nothing has been selected</p>"
});
</script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-route.js"></script>
