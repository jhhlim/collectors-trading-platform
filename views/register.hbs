  <div class="row justify-content-md-center mt-2">
    <div class="col col-md-4">
        <h2>Register</h2>
        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                    {{message}}
            </div>
        {{/if}}
        <form id="register_collector" action="/auth/register" method="POST">
        <p>Choose your user account type. *Note, admin accounts require approval from webmaster before creation:</p>
            <p>Are you signing up as an Admin?</p>
        <script type="text/javascript">
        function yesnoCheck() {
            if (document.getElementById('yesCheck').checked) {
                document.getElementById('ifYes').style.display = 'block';
            }
            else if (document.getElementById('noCheck').checked) {
                document.getElementById('ifYes').style.display = 'none';
                $('#is_admin').val('0'); //value of your default option
                $("#lego").hide()
                $("#funko").hide()
                $("#pusheen").hide()
                $("#pokemon").hide()
                $("#hotwheel").hide()
                $("#all").hide()
            }
        }
        </script>
        Yes <input type="radio" onclick="javascript:yesnoCheck();" name="yesno" id="yesCheck"> 
        No <input type="radio" onclick="javascript:yesnoCheck();" name="yesno" id="noCheck" checked><br>
        <div id="ifYes" style="display:none">
        <div class="form-example">
            <label for="db">Choose type</label>
                <select name="is_admin" id="is_admin" required>
                    <option value="0" id="def" readonly:"readonly">None</option>
                    <option value="1">Lego</option>
                    <option value="2">Funko</option>
                    <option value="3">Pusheen</option>
                    <option value="4">Pokemon</option>
                    <option value="5">Hot Wheels</option>
                    <option value="6">All</option>
            </select>
            </script>            
        <div id="lego" name="promo1" style="display:none;">
            <label for="promo1">Promo Code for LEGO Admin:</label>
            <input type="text" id="p1" title="Invalid Promo Code" pattern="AAA20" size="4" required>
        </div>
        <div id="funko" name="promo2" style="display:none;">
            <label for="promo2">Promo Code for FUNKO Admin:</label>
            <input type="text" id="p2" title="Invalid Promo Code" pattern="BBB20" size="4" required>
        </div>
        <div id="pusheen" name="promo3" style="display:none;">
            <label for="promo3">Promo Code for PUSHEEN Admin:</label>
            <input type="text" id="p3" title="Invalid Promo Code" pattern="CCC20" size="4" required>
        </div>
        <div id="pokemon" name="promo4" style="display:none;">
            <label for="promo4">Promo Code for POKEMON Admin:</label>
            <input type="text" id="p4" title="Invalid Promo Code" pattern="RRR20" size="4" required>
        </div>
        <div id="hotwheel" name="promo5" style="display:none;">
            <label for="promo5">Promo Code for HOT WHEEL Admin:</label>
            <input type="text" id="p5" title="Invalid Promo Code" pattern="DDD20" size="4" required>
        </div>
        <div id="all" name="promo6" style="display:none;">
            <label for="promo6">Promo Code for Super Admin:</label>
            <input type="text" id="p6" title="Invalid Promo Code" pattern="REG20" size="4" required>
        </div>
        </div>  
        </div>
        <script>
                if( document.getElementById('is_admin').value[0] ==="0")
                {
                    $("#p1").removeAttr("required");
                    $("#p2").removeAttr("required");
                    $("#p3").removeAttr("required");
                    $("#p4").removeAttr("required");
                    $("#p5").removeAttr("required");
                    $("#p6").removeAttr("required");
                }
                $('#is_admin').on('change',function(){
                    if( $(this).val()==="1"){
                        $("#lego").show()
                        $("#p2").removeAttr("required");
                        $("#p3").removeAttr("required");
                        $("#p4").removeAttr("required");
                        $("#p5").removeAttr("required");
                        $("#p6").removeAttr("required");
                    }
                    else{
                        $("#lego").hide()
                    }
                    if( $(this).val()==="2"){
                        $("#funko").show()
                        $("#p1").removeAttr("required");
                        $("#p3").removeAttr("required");
                        $("#p4").removeAttr("required");
                        $("#p5").removeAttr("required");
                        $("#p6").removeAttr("required");
                    }
                    else{
                        $("#funko").hide()
                    }
                    if( $(this).val()==="3"){
                        $("#pusheen").show()
                        $("#p1").removeAttr("required");
                        $("#p2").removeAttr("required");
                        $("#p4").removeAttr("required");
                        $("#p5").removeAttr("required");
                        $("#p6").removeAttr("required");
                    }
                    else{
                        $("#pusheen").hide()
                    }
                    if( $(this).val()==="4"){
                        $("#pokemon").show()
                        $("#p1").removeAttr("required");
                        $("#p2").removeAttr("required");
                        $("#p3").removeAttr("required");
                        $("#p5").removeAttr("required");
                        $("#p6").removeAttr("required");
                    }
                    else{
                        $("#pokemon").hide()
                    }
                    if( $(this).val()==="5"){
                        $("#hotwheel").show()
                        $("#p1").removeAttr("required");
                        $("#p2").removeAttr("required");
                        $("#p3").removeAttr("required");
                        $("#p4").removeAttr("required");
                        $("#p6").removeAttr("required");
                    }
                    else{
                        $("#hotwheel").hide()
                    }
                    if( $(this).val()==="6"){
                        $("#all").show()
                        $("#p1").removeAttr("required");
                        $("#p2").removeAttr("required");
                        $("#p3").removeAttr("required");
                        $("#p4").removeAttr("required");
                        $("#p5").removeAttr("required");
                    }
                    else{
                        $("#all").hide()
                    }
                    if( document.getElementById('is_admin').value[0] ="0")
                    {
                        $("#p1").removeAttr("required");
                        $("#p2").removeAttr("required");
                        $("#p3").removeAttr("required");
                        $("#p4").removeAttr("required");
                        $("#p5").removeAttr("required");
                        $("#p6").removeAttr("required");
                    }

                });            
        </script>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control"  name="username" id="username" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control"  name="email" id="email" required>
            </div>
            <div class="form-group">
                <label for="phone_number">Phone Number</label>
                <input type="phone_number" class="form-control"  name="phone_number" id="phone_number" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <small id="passwordHelp" class="form-text text-muted mb-1">Must contain at least: one uppercase letter, one lowercase letter, one number. Must be 8 or more characters in length.</small>
                <input type="password" id="password" class="form-control"  name="password" title="Passwords do not match" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" onchange="form.password2.pattern = RegExp.escape(this.value);" required>
                <label for="password">Confirm Password</label>
                <input type="password"  id="password2" class="form-control" placeholder="Confirm Password" name="password2" title="Passwords do not match" required />
            </div>
        <script type="text/javascript">
            //https://www.the-art-of-web.com/javascript/validate-password/
            // polyfill for RegExp.escape
            if(!RegExp.escape) {
                RegExp.escape = function(s) {
                return String(s).replace(/[\\^$*+?.()|[\]{}]/g, '\\$&');
                };
            }
        </script>
            <div>
                <input type="submit" class="btn btn-primary" value="Register" name="register">
            </div>
        </form>
        <hr/>
        <p class="text-muted">Already registered? Login <a href="/login">here</a>.</p>
    </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="/js/shared.js"></script>
