<div class="row justify-content-md-center mt-2">

    <div class="col col-md-4">
        {{#each collector}}
        <h2>{{{username}}}</h2>
        <h2>collector id: {{{collector_id}}}</h2>
        <span><i class="fa fa-paper-plane"></i> <a href="mailto:{{{email}}}?subject=Collector's%20Trading%20Platform%20">{{{email}}}</a> â€¢ <i class="fa fa-phone"></i> <a href="tel:{{{phone_number}}}">{{{phone_number}}}</a></span>
        <hr/>
    </div>
    {{/each}}


    <div class="col col-md-4 heading"><h3 >Inventory</h3></div>

    <div class="col col-md-4">
        {{#each collectionHas}}
        <div class="parent">             
            <div class='child float-left-child'>
                <td>
                    <a href="/collectible/{{{collectible_id}}}">{{{name}}}</a>
                    <br>
                    <br><img src=/collectible/image/{{{collectible_id}}} width="100px" height="100px"/>
                     <label>Enter Quantity</label>
                    <br>has: <input type="number" step="1" min="0" max="500"
                         name="quantity" id="q1" value="{{{has_quantity}}}" title="Qty" class="input-text qty text" size="1" pattern=""
                          inputmode="">
                      wants: <input type="number" step="1" min="0" max="500"
                    name="quantity" id="q2" value="{{{wants_quantity}}}" title="Qty" class="input-text qty text" size="1" pattern=""
                    inputmode="">
                      for trade: <input type="number" step="1" min="0" max="500"
                    name="quantity" id="q3" value="{{{willing_to_trade_quantity}}}" title="Qty" class="input-text qty text" size="1" pattern=""
                    inputmode="">
                    <br>
                    <br>
                </td>
            <br>
            <br>
            </div> 
        </div>
        {{/each}}
      <input type="submit" value="Submit">
      <br>
      <br>
    </div>

