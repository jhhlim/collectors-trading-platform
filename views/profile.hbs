<div class="row justify-content-md-center mt-2">
    
    <div class="col col-md-4">
        {{#each collector}}
        <h2>{{{username}}}</h2>
        <h2>collector id: {{{collector_id}}}</h2>
        <span><i class="fa fa-paper-plane"></i> <a href="mailto:{{{email}}}?subject=Collector's%20Trading%20Platform%20">{{{email}}}</a> â€¢ <i class="fa fa-phone"></i> <a href="tel:{{{phone_number}}}">{{{phone_number}}}</a></span>
        <hr/>
        {{/each}}
        
        <form action="/profile/publictoggle" method="post" class="form-example"> 
        <div class="parent">             
            <div class='child float-left-child2'>
                <td>
                    <p>Allow other users to see your have list?</p>
                    {{#if showHasPublic}}
                    <input type="radio" id="yes" name="has_public" value="true" checked>
                    <label for="yes">Yes</label>
                    <input type="radio" id="no" name="has_public" value="false">
                    <label for="no">No</label>
                    {{else}}
                    <input type="radio" id="yes" name="has_public" value="true">
                    <label for="yes">Yes</label>
                    <input type="radio" id="no" name="has_public" value="false" checked>
                    <label for="no">No</label>
                    {{/if}}
                </td>
            </div> 
            <div class='child float-left-child2'>
                <td>
                    <p>Allow other users to see your want list?</p>
                    {{#if showWantsPublic}}
                    <input type="radio" id="yes" name="wants_public" value="true" checked>
                    <label for="yes">Yes</label>
                    <input type="radio" id="no" name="wants_public" value="false">
                    <label for="no">No</label>
                    {{else}}
                    <input type="radio" id="yes" name="wants_public" value="true">
                    <label for="yes">Yes</label>
                    <input type="radio" id="no" name="wants_public" value="false" checked>
                    <label for="no">No</label>           
                    {{/if}}
                </td>
            </div>
        </div>
    </div>
    <div class="col col-md-4">
        <div class="parent">             
            <div class='child float-left-child3'>
                <input type="submit" class="btn btn-secondary" value="Update preferences">
                </form> 
            </div>
        </div>
    </div>
    
    <div class="col col-md-4">
        <hr/>
        <p><a href="/profile/list">view in text list format</a></p>
        <p><i class="fas fa-check"></i> : <a href="#have">have</a> &nbsp;&nbsp; | &nbsp;&nbsp; <i class="fas fa-heart"></i> : <a href="#want">want</a> &nbsp;&nbsp; | &nbsp;&nbsp; <i class='fas fa-people-arrows'></i> : <a href="#trade">for trade</a> &nbsp;&nbsp; | &nbsp;&nbsp; <a href="#match">matches</a></p>
    </div>
    <div id="have" class="col col-md-4 heading"><h3>Have List</h3></div>
        <div class="col col-md-4">
            {{#each collectionHas}}
            <div class="parent">             
                <div class='child float-left-child'>
                    <td>
                        <form action="/profile/has" method="post" class="form-example"> 
                            <a href="/collectible/{{{collectible_id}}}">{{{name}}}</a>
                            <br>
                            <img src=/collectible/image/{{{collectible_id}}}/>
                            <br>
                            <input type="hidden" name="collectible_id[]" id="collectible_id" value="{{{collectible_id}}}" readonly>
                            <label for="willing_to_trade_quantity"><i class="fas fa-check"></i> :</label>
                            <input type="number" step="1" min="0" max="500"
                            name="has_quantity[]" id="q1" value="{{{has_quantity}}}" title="Qty" class="input-text qty text" size="3" pattern="(.|\s)*\S(.|\s)*" inputmode="" required>
                            <label for="willing_to_trade_quantity"><i class="fas fa-heart"></i> :</label>
                            <input type="number" step="1" min="0" max="500"
                            name="wants_quantity[]" id="q2" value="{{{wants_quantity}}}" title="Qty" class="input-text qty text" size="3" pattern="(.|\s)*\S(.|\s)*" inputmode="" required>
                            <label for="willing_to_trade_quantity"><i class='fas fa-people-arrows'></i> :</label>
                            <input type="number" step="1" min="0" max="500"
                            name="willing_to_trade_quantity[]" id="q3" value="{{{willing_to_trade_quantity}}}" title="Qty" class="input-text qty text" size="3" pattern="(.|\s)*\S(.|\s)*" inputmode="" required>
                    </td>
                </div> 
            </div>
            {{/each}}
        </div>
            {{#if showHasButton}}
                <button type="submit" class="btn btn-secondary">Edit collection in have list</button>
            {{else}}
                <p>You have nothing in your have list</p>
            {{/if}}
    </form>   

    <div id="want" class="col col-md-4 heading"><h3>Want List</h3></div>
        <div class="col col-md-4">
            {{#each collectionWants}}
            <div class="parent">             
                <div class='child float-left-child'>
                    <td>
                        <form action="/profile/wants" method="post" class="form-example"> 
                            <a href="/collectible/{{{collectible_id}}}">{{{name}}}</a>
                            <br>
                            <img src=/collectible/image/{{{collectible_id}}}/>
                            <br>
                            <input type="hidden" name="collectible_id[]" id="collectible_id" value="{{{collectible_id}}}" readonly>
                            <label for="willing_to_trade_quantity"><i class="fas fa-check"></i> :</label>
                            <input type="number" step="1" min="0" max="500"
                            name="has_quantity[]" id="q1" value="{{{has_quantity}}}" title="Qty" class="input-text qty text" size="3" pattern="(.|\s)*\S(.|\s)*" inputmode="" required>
                            <label for="willing_to_trade_quantity"><i class="fas fa-heart"></i> :</label>
                            <input type="number" step="1" min="0" max="500"
                            name="wants_quantity[]" id="q2" value="{{{wants_quantity}}}" title="Qty" class="input-text qty text" size="3" pattern="(.|\s)*\S(.|\s)*" inputmode="" required>
                            <label for="willing_to_trade_quantity"><i class='fas fa-people-arrows'></i> :</label>
                            <input type="number" step="1" min="0" max="500"
                            name="willing_to_trade_quantity[]" id="q3" value="{{{willing_to_trade_quantity}}}" title="Qty" class="input-text qty text" size="3" pattern="(.|\s)*\S(.|\s)*" inputmode="" required>
                    </td>
                </div> 
            </div>
            {{/each}}
        </div>
            {{#if showWantsButton}}
                <button type="submit" class="btn btn-secondary">Edit collection in want list</button>
            {{else}}
                <p>You have nothing in your want list</p>
            {{/if}}
    </form>   

    <div id="trade" class="col col-md-4 heading"><h3>For Trade List</h3></div>
        <div class="col col-md-4">
            {{#each collectionWillingToTrade}}
            <div class="parent">             
                <div class='child float-left-child'>
                    <td>
                        <form action="/profile/trades" method="post" class="form-example"> 
                            <a href="/collectible/{{{collectible_id}}}">{{{name}}}</a>
                            <br>
                            <img src=/collectible/image/{{{collectible_id}}}/>
                            <br>
                            <input type="hidden" name="collectible_id[]" id="collectible_id" value="{{{collectible_id}}}" readonly>
                            <label for="willing_to_trade_quantity"><i class="fas fa-check"></i> :</label>
                            <input type="number" step="1" min="0" max="500"
                            name="has_quantity[]" id="q1" value="{{{has_quantity}}}" title="Qty" class="input-text qty text" size="3" pattern="(.|\s)*\S(.|\s)*" inputmode="" required>
                            <label for="willing_to_trade_quantity"><i class="fas fa-heart"></i> :</label>
                            <input type="number" step="1" min="0" max="500"
                            name="wants_quantity[]" id="q2" value="{{{wants_quantity}}}" title="Qty" class="input-text qty text" size="3" pattern="(.|\s)*\S(.|\s)*" inputmode="" required>
                            <label for="willing_to_trade_quantity"><i class='fas fa-people-arrows'></i> :</label>
                            <input type="number" step="1" min="0" max="500"
                            name="willing_to_trade_quantity[]" id="q3" value="{{{willing_to_trade_quantity}}}" title="Qty" class="input-text qty text" size="3" pattern="(.|\s)*\S(.|\s)*" inputmode="" required>
                    </td>
                </div> 
            </div>
            {{/each}}
        </div>
            {{#if showTradeButton}}
                <button type="submit" class="btn btn-secondary">Edit collection in trade list</button>
            {{else}}
                <p>You have nothing in your trade list</p>
            {{/if}}
    </form>   
      
    <div id="match" class="col col-md-4 heading"><h3>Trade Matches</h3></div>
        <div class="col col-md-4">
        {{#each matches}}
            <div class="parent">
                <div class='child float-left-child'>
                    <td>
                        <a href="/collectible/{{{collectible_id}}}">{{{name}}}</a>
                        <br>
                        <img src=/collectible/image/{{{collectible_id}}} width="100px" height="100px"/>
                        <br><a href="/collector/trade/images/{{{collector_id}}}">{{{username}}}</a> has
                        <br>{{{willing_to_trade_quantity}}} for trade.
                    </td>
                </div> 
                {{/each}}
            </div>
            {{#if noMatches}}
                <p>You have no trade matches</p>
            {{/if}}
    </div>
</div>

