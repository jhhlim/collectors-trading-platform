                            j--;
                            document.getElementById("q2").value = j;
                        }
                         var k = {{{willing_to_trade_quantity}}};
                        function increment3() {
                            k++;
                            document.getElementById("q3").value = k;
                        }
                        function decrement3() {
                            k--;
                            document.getElementById("q3").value = k;
                        }
