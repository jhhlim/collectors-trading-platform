<div class="row justify-content-md-center mt-2">
    <div class="col col-md-8">
        <h2>Collectible</h2>
        <table class="table table-striped">
            <thead>
                <th>Name</th>
                <th>Piece Count</th>
                <th>Set Number</th>
                <th>Theme</th>
                <th>Designer</th>
                <th>Number</th>
                <th>Line</th>
                <th>Series</th>
                <th>Release Year</th>
                <th>Image</th>
            </thead>
            <tbody>
                {{#each collectible}}
                    <tr>
                        <td>{{{name}}}</td>
                        <td>{{{attributes.piece_count}}}</td>
                        <td>{{{attributes.set_number}}}</td>
                        <td>{{{attributes.theme}}}</td>
                        <td>{{{attributes.designed_by}}}</td>
                        <td>{{{attributes.number}}}</td>
                        <td>{{{attributes.line}}}</td>
                        <td>{{{attributes.series}}}</td>
                        <td>{{{attributes.year_released}}}</td>
                        <td><a href="/collectible/image/{{{collectible_id}}}" target="_blank"><i class="fa fa-external-link-alt"></i> View</a></td>	
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>