    <div class="alert {{messageClass}}" role="alert">
        {{message}}
    </div>
{{/if}}


<h1>edit collectible</h1>




<form id="editcollectible" action="/edit-collectible" enctype="multipart/form-data" method="POST">

    <div class="form-example">
        <label for="collectible_id">collectible id: </label>
        <input type="text" name="collectible_id" id="collectible_id" required>
    </div>

    <div class="form-example">
        <label for="name">Name: </label>
        <input type="text" name="name" id="name">
    </div>

     <div class="form-example"></div>
        <p>Select a jpeg image of the collectible</p>
        <input type="file" name="pic" id="image" accept="image/jpeg"/>
    
    </div>

    <div>
        <input type="submit" value="Submit" name="submit">
    </div>
</form>